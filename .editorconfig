# EditorConfig helps maintain consistent coding styles across editors and IDEs
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown: don't trim trailing whitespace (needed for line breaks)
[*.md]
trim_trailing_whitespace = false

# YAML, JSON
[*.yml]
indent_size = 2

[*.json]
indent_size = 2

# HTML, CSS
[*.html]
indent_size = 2

[*.css]
indent_size = 2

# JavaScript
[*.js]
indent_size = 2

# Modern ES modules (optional)
[*.mjs]
indent_size = 2

# JSX (if ever used)
[*.jsx]
indent_size = 2

# Optional: handle SVG/XML if edited in code editor
[*.svg]
indent_size = 2
